{
	"version": 2,
	"public": true,
	"name": "cuentoneta",
	"installCommand": "pnpm install",
	"devCommand": "pnpm run dev",
	"rewrites": [{ "source": "/(.*)", "destination": "/api" }],
	"functions": {
		"api/index.mjs": {
			"includeFiles": "dist/cuentoneta/**"
		}
	},
	"crons": [
		{
			"path": "/api/story/update-most-read",
			"schedule": "15 3 * * *"
		},
		{
			"path": "/api/story/add-next-weeks-landing-page-content",
			"schedule": "30 3 * * 0"
		}
	]
}
